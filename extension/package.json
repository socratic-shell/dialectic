{
  "name": "dialectic",
  "displayName": "Dialectic Code Reviews",
  "description": "AI-powered code review panel for collaborative development",
  "version": "0.1.0",
  "icon": "$(comment-discussion)",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dialectic.showReview",
        "title": "Show Review",
        "category": "Dialectic"
      },
      {
        "command": "dialectic.copyReview",
        "title": "Copy Review",
        "category": "Dialectic",
        "icon": "$(copy)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "dompurify": "^3.2.6",
    "jsdom": "^26.1.0",
    "markdown-it": "^14.1.0"
  }
}
